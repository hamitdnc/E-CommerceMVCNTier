@using ETicaret.BLL

@{ 
    KategorilerManager katman = new KategorilerManager();
}

<div class="css-treeview">
   <h4>Kategoriler</h4>
    <!--<ul class="tree-list-pad">-->
    <ul class="glyphicon-tree-conifer">
        <li>
            <input type="checkbox" checked="checked" id="item-0" />
            @foreach (var item in katman.KategoriGetir())
            {
                <label for="item-0">
                    <i class="fa fa-long-arrow-right" aria-hidden="true">
                    </i>
                @item.KategoriAdi
                </label><br />
            }
            
        </li>
    </ul>
</div>